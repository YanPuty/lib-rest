{
   "compilerOptions": {
       "module": "commonjs",
       "target": "es6",
       "noImplicitAny": false,
       "moduleResolution": "node",
       "sourceMap": true,
       "outDir": "dist",
       "baseUrl": ".",
       "paths": {
           "*": [
               "node_modules/*",
               "src/types/*",
               "src/*"
           ],
           "controllers/*": ["src/controller/*"],
           "models/*": ["src/entity/*"],
           "services/*": ["src/Services/*"],
       },
       "experimentalDecorators": true,
       "emitDecoratorMetadata": true,
       "allowSyntheticDefaultImports": true,
       "lib": [
           "es5",
           "es6"
        ]
   },
   "include": [
       "src/**/*",
   ],
 }